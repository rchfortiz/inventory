{% extends "base.html.jinja" %}
{% set title = "Add an item" %}
{% block content %}
<header class="column is-full">
  <h1 class="title mb-3">Add an item</h1>
  <a href="/items">Back to items</a>
</header>

<main class="column is-full">
  {% if error %}
  <div class="notification is-danger">{{ error }}</div>
  {% endif %}

  <form method="post">
    <div class="field">
      <label class="label">Name</label>
      <div class="control">
        <input class="input" name="name" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Quantity</label>
      <div class="control">
        <input class="input" type="number" name="quantity" min="1" required>
      </div>
    </div>

    <button class="button is-primary">Add</button>
  </form>
</main>
{% endblock %}
