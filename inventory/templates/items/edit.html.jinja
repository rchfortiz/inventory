{% extends "base.html.jinja" %}
{% set title = 'Edit item "' + item.name + '"' %}
{% block content %}
<header>
  <h1 class="title mb-3">Edit item "{{ item.name }}"</h1>
  <a href="/items/{{ item.id }}">Back to item</a>
</header>

<main>
  <form method="post">
    <div class="field">
      <label class="label">Name</label>
      <div class="control">
        <input class="input" name="name" value="{{ item.name }}" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <input class="input" name="description" value="{{ item.description }}">
      </div>
    </div>

    <div class="field">
      <label class="label">Location</label>
      <div class="control">
        <input class="input" name="location" value="{{ item.location }}" required>
      </div>
    </div>

    <button class="button is-primary">Save changes</button>
  </form>
</main>
{% endblock %}
